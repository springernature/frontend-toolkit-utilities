<h1>Animal Autocomplete</h1>

<p>{{data}}</p>

<div>
	{{> myPartial }}
</div>

<img src="./img/img01.gif" />

<form action="#endpoint" method="post" id="searchForm" class="c-autocomplete-form">
	<div>
		<label for="searchFormTextInput" class="c-autocomplete-form__label">Search for an Animal:</label>
		<input type="text"
			autocomplete="off"
			data-component-autocomplete
			id="searchFormTextInput"
			class="c-autocomplete">
		<img src="./img/img02.jpeg" />
	</div>
	<button type="submit">Search</button>
</form>
